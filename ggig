# infinite loop 
while True: 
    while (x != 4):
        startupGif()
        imp = pygame.image.load("/home/engineering/Downloads/pixilart-drawing (1) (1).png").convert()
        scrn.blit(imp, (0, 0))
        pygame.display.flip()
        time.sleep(1)
        imp = pygame.image.load("/home/engineering/Downloads/pixil-frame-0 (2).png").convert()
        scrn.blit(imp, (0, 0))  
        
        pygame.display.flip()  
        time.sleep(0.1)
       #call startup animation function 
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            
            # checking if keydown event happened or not
            if event.type == pygame.KEYDOWN:
                
                # checking if key "A" was pressed
                if event.key == pygame.K_KP_ENTER:
                    mixer.music.play()
                    x=4
    x = 1
    while (x != 5):
        for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    pygame.quit()
                    sys.exit()
                
                # checking if keydown event happened or not
                if event.type == pygame.KEYDOWN:
                    
                    # checking if key "A" was pressed
                    if event.key == pygame.K_KP_1:
                        mixer.music.load("/home/engineering/Music/Guiardians of the Galaxy Vol 2/03 Lake Shore Drive.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_2:
                        mixer.music.load("/home/engineering/Music/Guiardians of the Galaxy Vol 2/01 Mr. Blue Sky.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_3:
                        mixer.music.load("/home/engineering/Music/Guiardians of the Galaxy Vol 2/08 Brandy (You're A Fine Girl).mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                    
                    if event.key == pygame.K_KP_4:
                        mixer.music.load("/home/engineering/Music/Guiardians of the Galaxy Vol 2/11 Surrender.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_5:
                        mixer.music.load("/home/engineering/Music/Guiardians of the Galaxy Vol 2/12 Father And Son.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_6:
                        mixer.music.load("/home/engineering/Music/Guardians of The Galaxy Vol 1/10 Escape (The Pi√±a Colada Song).mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                    
                    if event.key == pygame.K_KP_7:
                        mixer.music.load("/home/engineering/Music/Micheal Jackson/05 Beat It.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_8:
                        mixer.music.load("/home/engineering/Music/Nirvana/04 Lithium.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                        
                    if event.key == pygame.K_KP_9:
                        mixer.music.load("/home/engineering/Music/Micheal Jackson/06 Billie Jean.mp3")
                        mixer.music.set_volume(0.7) 
                        mixer.music.play()
                    
                    if event.key == pygame.K_KP_PERIOD:
                        mixer.music.unpause()
                    
                    if event.key == pygame.K_KP_0:

                        mixer.music.pause()
                    

                    
    print("Press 'p' to pause, 'r' to resume") 
    print("Type 'go' for go")
    print("Press 'e' to exit the program") 
    query = input("  ") 
      
    if query == 'p': 
  
        # Pausing the music 
        mixer.music.pause()      
    elif query == 'r': 
  
        # Resuming the music 
        mixer.music.unpause() 
    elif query == 'e': 
  
        # Stop the mixer 
        mixer.music.stop() 
        break
    elif query == 'go':
        mixer.music.play() 
